{
  "version": 2,
  "name": "fullstack-app",
  "builds": [
    {
      "src": "backend/api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "DATABASE_URL": "@your-database-url", 
    "JWT_SECRET": "@your-jwt-secret",
    "ANOTHER_ENV_VAR": "@another-env-var" 
  },
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./frontend ./backend"
}
